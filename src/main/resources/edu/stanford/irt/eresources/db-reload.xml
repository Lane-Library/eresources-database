<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
    <import resource="db-load.xml"/>
    <bean id="dbLoader" class="edu.stanford.irt.eresources.DBLoader" parent="abstractDbLoader">
        <property name="killPrevious" value="true"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="createStatements">
            <list>
                <value>DELETE FROM ERESOURCE</value>
                <value>DELETE FROM VERSION</value>
                <value>DELETE FROM LINK</value>
                <value>DELETE FROM TYPE</value>
                <value>DELETE FROM SUBSET</value>
                <value>DELETE FROM MESH</value>
            </list>
        </property>
        <property name="callStatements">
            <list>
                <value>{ call ctx_ddl.sync_index('TEXT_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TEXT_IDX','FULL') }</value>
                <value>{ call ctx_ddl.sync_index('TITLE_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TITLE_IDX','FULL') }</value>
                <value>'{' call dbms_stats.gather_schema_stats(ownname=>''{0}'', cascade=>TRUE)'}'</value>
            </list>
        </property>
    </bean>
    <bean id="eresourceHandler" class="edu.stanford.irt.eresources.DefaultEresourceHandler">
        <constructor-arg ref="erdbDataSource"/>
        <constructor-arg ref="queue"/>
        <constructor-arg ref="eresourceTranslator"/>
    </bean>
    <bean id="bibInputStream" class="edu.stanford.irt.eresources.BibInputStream">
        <constructor-arg ref="voyagerDataSource"/>
        <constructor-arg ref="executor"/>
    </bean>
    <bean id="authInputStream" class="edu.stanford.irt.eresources.AuthInputStream">
        <constructor-arg name="dataSource" ref="voyagerDataSource"/>
        <constructor-arg name="executor" ref="executor"/>
    </bean>
    <bean id="printBibInputStream" class="edu.stanford.irt.eresources.PrintBibInputStream">
        <constructor-arg ref="voyagerDataSource"/>
        <constructor-arg ref="executor"/>
    </bean>
</beans>
