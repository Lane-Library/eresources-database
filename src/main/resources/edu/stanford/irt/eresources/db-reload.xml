<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
    <import resource="db-load.xml"/>
    <bean id="loader" class="edu.stanford.irt.eresources.jdbc.JDBCLoader" init-method="preProcess" destroy-method="postProcess">
        <constructor-arg ref="erdbDataSource"/>
        <constructor-arg ref="eresourceTranslator"/>
        <constructor-arg ref="startDate"/>
        <property name="createStatements">
            <list>
                <value>DELETE FROM ERESOURCE</value>
                <value>DELETE FROM VERSION</value>
                <value>DELETE FROM LINK</value>
                <value>DELETE FROM TYPE</value>
                <value>DELETE FROM SUBSET</value>
                <value>DELETE FROM MESH</value>
            </list>
        </property>
        <property name="callStatements">
            <list>
                <value>{ call ctx_ddl.sync_index('TEXT_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TEXT_IDX','FAST') }</value>
                <value>{ call ctx_ddl.sync_index('TITLE_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TITLE_IDX','FAST') }</value>
            </list>
        </property>
        <property name="userName" value="ceyates"/>
    </bean>
    <bean id="executor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"
        destroy-method="destroy">
        <property name="corePoolSize" value="3"/>
        <property name="maxPoolSize" value="3"/>
        <property name="queueCapacity" value="0"/>
    </bean>
    <bean id="bibInputStream" class="edu.stanford.irt.eresources.marc.BibInputStream">
        <constructor-arg ref="voyagerDataSource"/>
        <constructor-arg ref="executor"/>
    </bean>
    <bean id="authInputStream" class="edu.stanford.irt.eresources.marc.AuthInputStream">
        <constructor-arg ref="voyagerDataSource"/>
        <constructor-arg ref="executor"/>
    </bean>
    <bean id="printBibInputStream" class="edu.stanford.irt.eresources.marc.PrintBibInputStream">
        <constructor-arg ref="voyagerDataSource"/>
        <constructor-arg ref="executor"/>
    </bean>
</beans>
