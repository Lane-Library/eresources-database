<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="solr-load.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SolrReload" parent="abstractSolrLoader">
        <property name="killPrevious" value="true"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="solrServer" ref="solrServer"/>
    </bean>
    <bean id="pubmedProcessor" class="edu.stanford.irt.eresources.PubmedEresourceProcessor">
        <property name="xmlReader">
            <bean class="edu.stanford.irt.eresources.JaxpXMLReader">
                <property name="contentHandler" ref="pubmedTransformer"/>
            </bean>
        </property>
        <property name="basePath" value="${eresources.pubmedprocessor.basepath}"/>
    </bean>
</beans>
