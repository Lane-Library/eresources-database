<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="solr-load.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SolrUpdate" parent="abstractSolrLoader">
        <property name="killPrevious" value="false"/>
    </bean>
    <bean id="bibInputStream" class="edu.stanford.irt.eresources.UpdateBibInputStream">
        <property name="dataSource" ref="voyagerDataSource"/>
        <property name="executor" ref="executor"/>
    </bean>
    <bean id="printBibInputStream" class="edu.stanford.irt.eresources.UpdatePrintBibInputStream">
        <property name="dataSource" ref="voyagerDataSource"/>
        <property name="executor" ref="executor"/>
    </bean>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor" >
        <property name="logEresource" value="true"/>
    </bean>
</beans>
