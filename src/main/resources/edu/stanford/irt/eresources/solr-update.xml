<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="solr-load.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SolrUpdate" parent="abstractSolrLoader">
    	<property name="processors">
            <list>
                <ref bean="bibProcessor"/>
                <ref bean="webProcessor"/>
                <ref bean="laneblogProcessor"/>
            </list>
        </property>
    </bean>
    <bean id="jdbcCatalogRecordService" class="edu.stanford.irt.eresources.JDBCCatalogRecordService">
        <constructor-arg name="dataSource" ref="voyagerDataSource"/>
        <constructor-arg name="executor" ref="executor"/>
        <constructor-arg value="classpath:/edu/stanford/irt/eresources/sql/update.sql"/>
    </bean>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor" >
        <property name="logEresource" value="true"/>
    </bean>
    <bean id="httpCatalogRecordService" class="edu.stanford.irt.eresources.HTTPCatalogRecordService">
        <constructor-arg ref="catalogServiceURI"/>
    </bean>
</beans>
