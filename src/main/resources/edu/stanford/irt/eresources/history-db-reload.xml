<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <import resource="history-db-load.xml"/>
    <bean id="dbLoader" class="edu.stanford.irt.eresources.DBUpdate" parent="abstractDbLoader">
        <constructor-arg value="H_"/>
        <property name="killPrevious" value="true"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="createStatements">
            <list>
                <value>DELETE FROM H_ERESOURCE</value>
                <value>DELETE FROM H_VERSION</value>
                <value>DELETE FROM H_LINK</value>
                <value>DELETE FROM H_TYPE</value>
                <value>DELETE FROM H_SUBSET</value>
                <value>DELETE FROM H_MESH</value>
            </list>
        </property>
        <property name="callStatements">
            <list>
                <value>{ call ctx_ddl.sync_index('H_TEXT_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('H_TEXT_IDX','FAST') }</value>
                <value>{ call ctx_ddl.sync_index('H_TITLE_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('H_TITLE_IDX','FAST') }</value>
            </list>
        </property>
    </bean>
    <bean id="eresourceHandler" class="edu.stanford.irt.eresources.DefaultEresourceHandler">
        <constructor-arg ref="erdbDataSource"/>
        <constructor-arg ref="queue"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.EresourceSQLTranslator">
                <constructor-arg value="H_"/>
            </bean>
        </constructor-arg>
        <constructor-arg value="H_"/>
    </bean>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor" >
        <property name="logEresource" value="true"/>
    </bean>
</beans>
