<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="solr-pubmed-load.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SolrPubmedUpdate" parent="abstractSolrLoader">
        <property name="killPrevious" value="false"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="solrServer" ref="solrServer"/>
    </bean>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor" >
        <property name="logEresource" value="true"/>
    </bean>
</beans>
