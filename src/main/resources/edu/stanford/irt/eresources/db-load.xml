<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
    <import resource="bib-processor.xml"/>
    <import resource="web-processor.xml"/>
    <import resource="auth-processor.xml"/>
    <import resource="classes-processor.xml"/>
    <import resource="print-processor.xml"/>
    <bean id="abstractDbLoader" class="edu.stanford.irt.eresources.DBLoader" abstract="true">
        <property name="userName" value="${eresources.eresourcesdb.username}"/>
        <property name="dataSource" ref="erdbDataSource"/>
        <property name="processors">
            <list>
                <ref bean="bibProcessor"/>
                <ref bean="webProcessor"/>
                <ref bean="authProcessor"/>
                <ref bean="classesProcessor"/>
                <ref bean="printProcessor"/>
            </list>
        </property>
        <property name="version" value="${project.version}"/>
        <property name="executor" ref="executor"/>
        <property name="queue" ref="queue"/>
    </bean>
    <bean id="queue" class="java.util.concurrent.LinkedBlockingQueue">
        <constructor-arg value="10000"/>
    </bean>
    <bean id="itemCount" class="edu.stanford.irt.eresources.ItemCount">
        <constructor-arg ref="voyagerDataSource"/>
    </bean>
    <bean id="keywordsStrategy" class="edu.stanford.irt.eresources.marc.KeywordsStrategy">
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.marc.AuthTextAugmentation">
                <constructor-arg ref="marcReaderFactory"/>
                <constructor-arg ref="voyagerDataSource"/>
                <constructor-arg ref="executor"/>
            </bean>
        </constructor-arg>
    </bean>
    <bean id="eresourceTranslator" class="edu.stanford.irt.eresources.EresourceSQLTranslator">
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.VersionSQLTranslator">
                <constructor-arg>
                    <bean class="edu.stanford.irt.eresources.LinkSQLTranslator"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
    <bean id="marcReaderFactory" class="edu.stanford.irt.eresources.marc.MarcReaderFactory"/>
    <bean id="erdbDataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="${eresources.eresourcesdb.url}"/>
        <property name="username" value="${eresources.eresourcesdb.username}"/>
        <property name="password" value="${eresources.eresourcesdb.password}"/>
        <property name="suppressClose" value="true"/>
    </bean>
    <bean id="voyagerDataSource" class="oracle.jdbc.pool.OracleConnectionPoolDataSource">
        <property name="URL" value="${eresources.voyagerdb.url}"/>
        <property name="user" value="${eresources.voyagerdb.username}"/>
        <property name="password" value="${eresources.voyagerdb.password}"/>
    </bean>
    <bean id="executor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"
        destroy-method="destroy">
        <property name="corePoolSize" value="4"/>
        <property name="maxPoolSize" value="4"/>
        <property name="queueCapacity" value="0"/>
    </bean>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="file:eresources.properties"/>
    </bean>
</beans>
