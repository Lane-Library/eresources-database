<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <bean id="bibProcessor" class="edu.stanford.irt.eresources.marc.MARCRecordEresourceProcessor">
        <constructor-arg ref="eresourceHandler"/>
        <constructor-arg ref="itemCount"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.marc.KeywordsStrategy">
                <constructor-arg ref="authTextAugmentation"/>
                <constructor-arg ref="reservesTextAugmentation"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.marc.RecordCollectionFactory">
                <constructor-arg ref="${eresources.remoteServiceProtocol}CatalogRecordService"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.marc.TypeFactory"/>
        </constructor-arg>
    </bean>
    <bean id="authTextAugmentation" class="edu.stanford.irt.eresources.marc.AuthTextAugmentation">
        <constructor-arg ref="${eresources.remoteServiceProtocol}AuthTextAugmentationsService"/>
    </bean>
    <bean id="reservesTextAugmentation" class="edu.stanford.irt.eresources.marc.ReservesTextAugmentation">
        <constructor-arg ref="${eresources.remoteServiceProtocol}ReservesTextAugmentationsService"/>
    </bean>
    <bean id="itemCount" class="edu.stanford.irt.eresources.ItemCount">
        <constructor-arg ref="${eresources.remoteServiceProtocol}ItemService"/>
    </bean>
    <bean id="httpAuthTextAugmentationsService" class="edu.stanford.irt.eresources.marc.HTTPAugmentationsService">
        <constructor-arg ref="objectMapper"/>
        <constructor-arg ref="catalogServiceURI"/>
        <constructor-arg value="augmentations/auth"/>
    </bean>
    <bean id="jdbcAuthTextAugmentationsService" class="edu.stanford.irt.eresources.marc.JDBCAuthTextAugmentationsService">
        <constructor-arg ref="voyagerDataSource"/>
    </bean>
    <bean id="httpReservesTextAugmentationsService" class="edu.stanford.irt.eresources.marc.HTTPAugmentationsService">
        <constructor-arg ref="objectMapper"/>
        <constructor-arg ref="catalogServiceURI"/>
        <constructor-arg value="augmentations/reserves"/>
    </bean>
    <bean id="jdbcReservesTextAugmentationsService" class="edu.stanford.irt.eresources.marc.JDBCReservesTextAugmentationsService">
        <constructor-arg ref="voyagerDataSource"/>
    </bean>
    <bean id="httpItemService" class="edu.stanford.irt.eresources.HTTPItemService">
        <constructor-arg ref="catalogServiceURI"/>
        <constructor-arg ref="objectMapper"/>
    </bean>
    <bean id="jdbcItemService" class="edu.stanford.irt.eresources.JDBCItemService">
        <constructor-arg ref="voyagerDataSource"/>
    </bean>
</beans>
