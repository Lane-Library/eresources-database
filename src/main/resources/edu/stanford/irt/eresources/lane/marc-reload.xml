<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="../common.xml"/>
    <import resource="marc-processor.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.Reloader" parent="abstractSolrLoader">
        <constructor-arg name="baseQuery" value="recordType:bib"/>
        <constructor-arg name="expectedMinRecords" value="300000"/>
        <property name="processors">
            <list>
                <ref bean="bibProcessor"/>
            </list>
        </property>
    </bean>
</beans>
