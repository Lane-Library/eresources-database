<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="kanopyProcessor" class="edu.stanford.irt.eresources.sax.videos.kanopy.KanopyEresourceProcessor">
		<property name="contentHandler" ref="kanopyTransformer" />
		  <property name="URLs">
        	<list>
        		<value>https://stanford.kanopystreaming.com/catalog/social-sciences/psychology?page=</value>
       		</list>
       	</property>
       	<property name="nextPageExpression"><value>count(//div[@class='results']/ul/li)</value></property>
	</bean>
	
	<bean id="kanopyTransformer" class="edu.stanford.lane.catalog.impl.xml.FilteringXSLTTransformer" init-method="init">
		<property name="stylesheet" value="classpath://edu/stanford/irt/eresources/videos/kanopy2er.xsl" />
		<property name="transformerFactory" value="net.sf.saxon.TransformerFactoryImpl" />
		<property name="namespace" value="" />
		<property name="element" value="eresources" />
		<property name="contentHandler" ref="kanopyBuilder" />
	</bean>
	
	<bean id="kanopyBuilder" class="edu.stanford.irt.eresources.sax.DefaultEresourceBuilder">
		<property name="eresourceHandler" ref="eresourceHandler" />
	</bean>

	<bean id="solrLoader" class="edu.stanford.irt.eresources.SolrVideosReload" parent="abstractSolrLoader">
		<property name="processors">
			<list>
				<ref bean="kanopyProcessor" />
			</list>
		</property>
	</bean>

	<import resource="video-reload.xml" />
	
</beans>
