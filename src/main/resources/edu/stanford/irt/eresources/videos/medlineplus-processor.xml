<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

 	<bean id="solrLoader" class="edu.stanford.irt.eresources.SolrVideosReload" parent="abstractSolrLoader">
    		<property name="processors">
			<list>
				 <ref bean="medlineplusProcessor" /> 
			</list>
        </property>
    </bean>
    

	<bean id="medlineplusProcessor" class="edu.stanford.irt.eresources.sax.videos.medlineplus.MedlineplusEresourceProcessor">
		<property name="contentHandler" ref="medlineplusTransformer" />
		<property name="URLs">
			<list>
				 <value>https://www.nlm.nih.gov/medlineplus/anatomyvideos.html</value>  
			 	 <value>https://www.nlm.nih.gov/medlineplus/surgeryvideos.html</value>  
			</list>
		</property>
		<property name="expressions">
			<list>
				<value>//a[contains(@href,'ency/anatomyvideos')]/@href</value>
				 <value>//a[contains(@href, 'displayPageNLM') or contains(@href, 'displaypageNLM') ]/@href</value> 
			</list>
		</property>
	</bean>
	
	<bean id="medlineplusTransformer" class="edu.stanford.lane.catalog.impl.xml.FilteringXSLTTransformer" init-method="init">
		<property name="stylesheet" value="classpath://edu/stanford/irt/eresources/videos/medlineplus2er.xsl" />
		<property name="transformerFactory" value="net.sf.saxon.TransformerFactoryImpl" />
		 <property name="namespace" value=""/>
        <property name="element" value="eresources"/>
		<property name="contentHandler" ref="medlineplusBuilder" />
	</bean>

	<bean id="medlineplusBuilder" class="edu.stanford.irt.eresources.sax.DefaultEresourceBuilder">
		<property name="eresourceHandler" ref="eresourceHandler" />
	</bean>

	<import resource="video-reload.xml"/>
	
</beans>

