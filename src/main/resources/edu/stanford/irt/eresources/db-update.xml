<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="db-load.xml"/>
    <bean id="dbLoader" class="edu.stanford.irt.eresources.DBUpdate" parent="abstractDbLoader">
        <property name="killPrevious" value="false"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="callStatements">
            <list>
                <value>{ call ctx_ddl.sync_index('TEXT_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TEXT_IDX','FAST') }</value>
                <value>{ call ctx_ddl.sync_index('TITLE_IDX') }</value>
                <value>{ call ctx_ddl.optimize_index('TITLE_IDX','FAST') }</value>
            </list>
        </property>
    </bean>
    <bean id="eresourceHandler" class="edu.stanford.irt.eresources.UpdateEresourceHandler">
        <constructor-arg ref="erdbDataSource"/>
        <constructor-arg ref="queue"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.eresources.EresourceSQLTranslator"/>
        </constructor-arg>
    </bean>
    <bean id="bibInputStream" class="edu.stanford.irt.eresources.UpdateBibInputStream">
        <property name="dataSource" ref="voyagerDataSource"/>
        <property name="executor" ref="executor"/>
    </bean>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor" >
        <property name="logEresource" value="true"/>
    </bean>
</beans>
