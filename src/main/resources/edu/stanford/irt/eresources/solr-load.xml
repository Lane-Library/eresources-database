<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="bib-processor.xml"/>
    <import resource="web-processor.xml"/>
    <import resource="auth-processor.xml"/>
    <import resource="classes-processor.xml"/>
    <import resource="print-processor.xml"/>
    <import resource="laneblog-processor.xml"/>
    <bean id="abstractSolrLoader" class="edu.stanford.irt.eresources.SolrLoader" abstract="true">
        <property name="killPrevious" value="true"/>
        <property name="handler" ref="eresourceHandler"/>
        <property name="processors">
            <list>
                <ref bean="bibProcessor"/>
                <ref bean="webProcessor"/>
                <ref bean="authProcessor"/>
                <ref bean="classesProcessor"/>
                <ref bean="printProcessor"/>
                <ref bean="laneblogProcessor"/>
            </list>
        </property>
        <property name="version" value="${project.version}"/>
        <property name="executor" ref="executor"/>
        <property name="queue" ref="queue"/>
        <property name="solrServer" ref="solrServer"/>
        <property name="optimize" value="true"/>
    </bean>
    <bean id="eresourceHandler" class="edu.stanford.irt.eresources.SolrEresourceHandler">
        <constructor-arg ref="queue"/>
        <constructor-arg name="solrServer" ref="solrServer"/>
        <constructor-arg name="solrMaxDocs" value="${eresources.solr-max-docs}"/>
    </bean>
    <bean id="solrServer" class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg value="${eresources.solr-url-laneSearch}"/>
    </bean>
    <bean id="queue" class="java.util.concurrent.LinkedBlockingQueue">
        <constructor-arg value="10000"/>
    </bean>
    <bean id="voyagerDataSource" class="oracle.jdbc.pool.OracleConnectionPoolDataSource">
        <property name="URL" value="${eresources.voyagerdb.url}"/>
        <property name="user" value="${eresources.voyagerdb.username}"/>
        <property name="password" value="${eresources.voyagerdb.password}"/>
    </bean>
    <bean id="executor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor" destroy-method="destroy">
        <property name="corePoolSize" value="4"/>
        <property name="maxPoolSize" value="4"/>
        <property name="queueCapacity" value="0"/>
    </bean>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="file:eresources.properties"/>
    </bean>
    <bean id="autoProxyCreator"
        class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="proxyTargetClass" value="true"/>
        <property name="beanNames"
            value="solrIndexer,bibProcessor,webProcessor,authProcessor,classesProcessor,printProcessor,laneblogProcessor,eresourceHandler"/>
        <property name="interceptorNames"
            value="exceptionAdvisor,beforeMethodAdvisor,afterMethodAdvisor"/>
    </bean>
    <bean id="exceptionAdvisor" class="edu.stanford.irt.eresources.logging.ExceptionAdvisor"/>
    <bean id="beforeMethodAdvisor" class="edu.stanford.irt.eresources.logging.BeforeMethodAdvisor"/>
    <bean id="afterMethodAdvisor" class="edu.stanford.irt.eresources.logging.ReturnMethodAdvisor"/>
</beans>
