<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <bean id="bibProcessor" class="edu.stanford.irt.eresources.MARCEresourceProcessor">
        <property name="inputStream">
            <bean id="eresourcesInputStream" class="edu.stanford.irt.eresources.BibInputStream">
                <property name="dataSource" ref="voyagerDataSource"/>
                <property name="executor" ref="executor"/>
            </bean>
        </property>
        <property name="xmlReader">
            <bean id="marcReader" class="edu.stanford.lane.catalog.impl.xml.UTF8ComposingMarcReader">
                <property name="contentHandler" ref="bibBuilder"/>
            </bean>
        </property>
        <property name="eresourceBuilder" ref="bibBuilder"/>
    </bean>
    <bean id="voyagerDataSource"
        class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="${eresources.voyagerdb.url}"/>
        <property name="username" value="${eresources.voyagerdb.username}"/>
        <property name="password" value="${eresources.voyagerdb.password}"/>
        <property name="suppressClose" value="true"/>
    </bean>
    <bean id="marcReader" class="edu.stanford.lane.catalog.impl.xml.UTF8ComposingMarcReader">
        <property name="contentHandler" ref="bibBuilder"/>
    </bean>
    <bean id="bibBuilder" class="edu.stanford.irt.eresources.MARCEresourceBuilder">
        <property name="eresourceHandler" ref="eresourceHandler"/>
        <property name="authTextAugmentation" ref="authTextAugmentation"/>
    </bean>
    <bean id="authTextAugmentation" class="edu.stanford.irt.eresources.AuthTextAugmentation">
        <property name="dataSource">
            <bean class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
                <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
                <property name="url" value="${eresources.voyagerdb.url}"/>
                <property name="username" value="${eresources.voyagerdb.username}"/>
                <property name="password" value="${eresources.voyagerdb.password}"/>
                <property name="suppressClose" value="true"/>
            </bean>
        </property>
        <property name="executor" ref="executor"/>
    </bean>
</beans>
