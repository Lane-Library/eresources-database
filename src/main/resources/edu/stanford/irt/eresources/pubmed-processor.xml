<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="pubmedProcessor" class="edu.stanford.irt.eresources.PubmedEresourceProcessor">
        <property name="xmlReader">
            <bean class="edu.stanford.irt.eresources.JaxpXMLReader">
                <property name="contentHandler" ref="pubmedTransformer"/>
            </bean>
        </property>
        <property name="basePath" value="${eresources.pubmedprocessor.basepath}"/>
    </bean>

    <bean id="pubmedTransformer" class="edu.stanford.lane.catalog.impl.xml.TraxTransformer" init-method="init">
        <property name="stylesheet" value="classpath://edu/stanford/irt/eresources/pubmed2er.stx"/>
        <property name="transformerFactory" value="net.sf.joost.trax.TransformerFactoryImpl"/>
        <property name="contentHandler" ref="pubmedBuilder"/>
    </bean>
    
    <bean id="pubmedBuilder" class="edu.stanford.irt.eresources.PubmedEresourceBuilder">
        <property name="eresourceHandler" ref="eresourceHandler"/>
        <property name="specialTypesManager" ref="specialTypesManager"/>
    </bean>
    
    <bean id="specialTypesManager" class="edu.stanford.irt.eresources.PubmedSpecialTypesManager">
        <constructor-arg name="searchers">
            <list>
			    <bean class="edu.stanford.irt.eresources.PubmedSearcher">
			        <constructor-arg name="type" value="Systematic Review"/>
			        <constructor-arg name="query" value="systematic[sb]"/>
			    </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>
