<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="../common.xml"/>
    <import resource="sul-marc-processor.xml"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SulUpdate" parent="abstractSolrLoader">
        <constructor-arg name="basePath" value="${eresources.sul.file-record-service.basePath}/incr"/>
    	<property name="processors">
            <list>
                <ref bean="sulMARCProcessor"/>
            </list>
        </property>
    </bean>
    <bean id="sulFileCatalogRecordService" class="edu.stanford.irt.eresources.SulFileCatalogRecordService">
        <constructor-arg name="basePath" value="${eresources.sul.file-record-service.basePath}/incr"/>
        <constructor-arg name="executor" ref="executor"/>
    </bean>
</beans>
