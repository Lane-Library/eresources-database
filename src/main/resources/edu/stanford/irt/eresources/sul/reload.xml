<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <import resource="../common.xml"/>
    <import resource="sul-marc-processor.xml"/>
    <!-- included for authAugmentation, etc. -->
    <import resource="../lane/marc-processor.xml"/>
    <!-- override lane/marc-processor.xml bibProcessor and itemCount with bogus bean definitions to avoid fetching unnecessary resources -->
    <bean id="bibProcessor" class="java.lang.Object"/>
    <bean id="itemCount" class="java.lang.Object"/>
    <bean id="solrLoader" class="edu.stanford.irt.eresources.SulReload" parent="abstractSolrLoader">
    	<property name="processors">
            <list>
                <ref bean="sulMARCProcessor"/>
            </list>
        </property>
    </bean>
    <bean id="sulSolrClient" class="org.apache.solr.client.solrj.impl.HttpSolrClient">
        <constructor-arg value="${eresources.sul.solr-catalog-service.base-url}"/>
    </bean>
    <bean id="sulSolrCatalogRecordService" class="edu.stanford.irt.eresources.SulSolrCatalogRecordService">
        <constructor-arg ref="sulSolrClient"/>
        <constructor-arg name="executor" ref="executor"/>
    </bean>
    <bean id="sulCatalogRecordService" class="edu.stanford.irt.eresources.SulCatalogRecordService">
        <constructor-arg ref="sulCatalogServiceURI"/>
    </bean>
    <bean id="sulFileCatalogRecordService" class="edu.stanford.irt.eresources.SulFileCatalogRecordService">
        <constructor-arg name="basePath" value="${eresources.sul.file-record-service.basePath}"/>
        <constructor-arg name="executor" ref="executor"/>
    </bean>
    <bean id="sulCatalogServiceURI" class="java.net.URI">
        <constructor-arg value="${eresources.sul-catalog-service.scheme}"/>
        <constructor-arg value="null"/>
        <constructor-arg value="${eresources.sul-catalog-service.host}"/>
        <constructor-arg value="${eresources.sul-catalog-service.port}"/>
        <constructor-arg value="${eresources.sul-catalog-service.path}"/>
        <constructor-arg value="${eresources.sul-catalog-service.query}"/>
        <constructor-arg value="null"/>
    </bean>
</beans>
