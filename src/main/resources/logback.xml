<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <property file="eresources.properties" />

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>er.log</File>
        <encoder>
            <pattern>%d %p [%t][%c] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
            <FileNamePattern>er.log.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %p [%t][%c] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="email" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>${eresources.log.email.smtpHost}</smtpHost>
        <smtpPort>${eresources.log.email.smtpPort}</smtpPort>
        <to>${eresources.log.email.to}</to>
        <from>${eresources.log.email.from}</from>
        <subject>${eresources.log.email.subject}</subject>
        <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
    </appender>

    <root level="${eresources.log.level}">
        <appender-ref ref="${eresources.log.appender}"/>
        <appender-ref ref="email"/>
    </root>

</configuration> 

